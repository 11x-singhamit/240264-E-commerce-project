{
  "name": "backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:watch": "cross-env NODE_ENV=test jest --watch --detectOpenHandles",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --detectOpenHandles --forceExit"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "verbose": true,
    "collectCoverage": false,
    "setupFilesAfterEnv": ["<rootDir>/test/setup.js"],
    "testMatch": [
      "**/test/**/*.test.js",
      "**/tests/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ]
  },
  "keywords": ["ecommerce", "api", "nodejs", "express", "mysql"],
  "author": "",
  "license": "ISC",
  "description": "E-commerce backend API with MySQL database",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "fs-extra": "^11.3.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "mysql2": "^3.14.2",
    "path-to-regexp": "^6.2.1",
    "sharp": "^0.34.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "cross-env": "^7.0.3"
  }
}
